#ifndef INC_FILE_MANAGER_H_
#define INC_FILE_MANAGER_H_

class Drawer {
public:
    unsigned char DrawerID;        // Drawer identifier
    float calibrationFactor;       // Calibration factor
    float tare;                    // Tare weight
    unsigned int row;              // Row number
    unsigned int drawerNum;        // Drawer number

    // Constructor
    Drawer(unsigned char id, float calFactor, float t, unsigned int r, unsigned int d)
        : DrawerID(id), calibrationFactor(calFactor), tare(t), row(r), drawerNum(d) {}
};

void saveCalFactor(float calFactor, int row, int drawer, uint32_t tare);

char* getFileInfo();

#endif /* INC_FILE_MANAGER_H_ */
